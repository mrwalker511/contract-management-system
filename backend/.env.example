# Application Settings
APP_NAME="Contract Management System"
APP_VERSION="1.0.0"
DEBUG=False

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/contract_db

# Security - CHANGE THESE IN PRODUCTION!
SECRET_KEY=your-secret-key-change-in-production-use-strong-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# DocuSign (Optional for Phase 1)
DOCUSIGN_INTEGRATION_KEY=
DOCUSIGN_USER_ID=
DOCUSIGN_ACCOUNT_ID=
DOCUSIGN_PRIVATE_KEY_PATH=
DOCUSIGN_BASE_PATH=https://demo.docusign.net/restapi

# Phase 2: Email Notifications (SMTP)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@contractmanagement.com
SMTP_FROM_NAME=Contract Management System
SMTP_USE_TLS=true

# Phase 2: Microsoft Teams Integration
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
TEAMS_TEAM_ID=
TEAMS_CHANNEL_ID=

# Phase 2: File Uploads
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=52428800
